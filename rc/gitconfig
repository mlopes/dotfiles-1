[user]
    name = Sarunas Valaskevicius
    email = svalaskevicius@inviqa.com

[push]
    default = current

[core]
    quotepath = false
    excludesfile = ~/.gitignore_global

[interactive]
    singlekey = true

[url "git://github.com/"]
    insteadOf = gh:

[url "git@github.com:"]
    insteadOf = wgh:

[color]
    branch = auto
    diff   = auto
    status = auto

[apply]
    whitespace = nowarn

[alias]
    s  = status -s
    a  = add
    c  = commit -v
    ca = commit -av
    u  = reset HEAD

    b  = branch
    bn = checkout -b
    co = checkout

    d  = diff
    dc = diff --cached
    ds = diff --stat
    m  = merge --no-ff

    l = log --oneline --graph
    t = log --graph --full-history --all --color --date=short --pretty=format:\"%Cred%h%Cblue%d %Creset %s %C(green)(%an) %Creset%ad\"

    review = "!f() { local SHA=${1:-HEAD}; local BRANCH=${2:-master}; if test "$SHA" = "$BRANCH" ; then SHA=HEAD; fi; git difftool -y -t kdiff3 $BRANCH...$SHA; }; f"

[web]
    browser = xdg-open

[difftool]
    prompt = false

[mergetool]
    prompt = false

